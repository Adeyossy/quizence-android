<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/collation_subposting_cardview"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:clipToPadding="false"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:clipToPadding="false"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/collation_subposting_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/collation_subposting_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oswald_regular"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                tools:text="@string/course"/>

            <TextView
                android:background="@drawable/round_button"
                android:backgroundTint="@color/colorPrimary"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/collation_subposting_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/comicneue_bold"
                android:textSize="12sp"
                android:textColor="@color/colorPrimaryDark"
                android:textAllCaps="true"
                tools:text="@string/welcome" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/collation_subposting_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:drawableStart="@drawable/ic_date_range_black_24dp"
                android:drawablePadding="4dp"
                android:fontFamily="@font/oswald_regular"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                tools:text="@string/collation_date_month" />

            <TextView
                android:id="@+id/collation_subposting_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:drawableStart="@drawable/ic_date_range_black_24dp"
                android:drawablePadding="4dp"
                android:fontFamily="@font/oswald_regular"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                tools:text="@string/welcome" />

            <TextView
                android:id="@+id/collation_subposting_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:drawableStart="@drawable/ic_date_range_black_24dp"
                android:drawablePadding="4dp"
                android:fontFamily="@font/oswald_regular"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                tools:text="@string/course" />

            <TextView
                android:id="@+id/collation_subposting_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:fontFamily="@font/oswald_regular"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                tools:text="@string/eightam" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>