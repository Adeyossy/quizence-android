<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_relativelayout"
    android:foreground="?attr/selectableItemBackground"
    android:background="@color/colorMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:elevation="4dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/oswald_regular"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        tools:text="@string/blob_text"/>

    <TextView
        android:id="@+id/item_count_number"
        android:drawableStart="@drawable/ic_info_black_24dp"
        android:drawableTint="@color/colorPrimaryDark"
        android:drawablePadding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_description"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/comicneue_regular"
        android:textColor="@android:color/black"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:text="35"/>

    <TextView
        android:id="@+id/item_type"
        android:drawableStart="@drawable/ic_info_outline_black_24dp"
        android:drawableTint="@color/colorPrimaryDark"
        android:drawablePadding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/comicneue_regular"
        android:textColor="@android:color/black"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@id/item_description"
        android:layout_toRightOf="@id/item_count_number"
        android:textAlignment="center"
        tools:text="True or False"/>

    <TextView
        android:id="@+id/item_year"
        android:drawableStart="@drawable/ic_date_range_black_24dp"
        android:drawableTint="@color/colorPrimaryDark"
        android:drawablePadding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_type"
        android:layout_below="@id/item_description"
        android:fontFamily="@font/comicneue_regular"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        tools:text="2009"/>

</RelativeLayout>