<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="top"
    android:paddingTop="12dp"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:clipToPadding="false"
    android:animateLayoutChanges="true">

    <TextView
        android:id="@+id/fragment_edit_collation_swipe_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comicneue_bold"
        tools:text="@string/course"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textAllCaps="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_edit_collation_swipe_textview"
        android:textSize="12sp"
        android:text="@string/click_to_edit"/>

    <EditText
        android:id="@+id/fragment_edit_collation_swipe_title"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_edit_collation_swipe_textview"
        android:inputType="textCapSentences|textMultiLine"
        android:minLines="3"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        android:textStyle="normal"
        android:fontFamily="@font/oswald_semibold"
        android:hint="@string/question_here" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/edit_collation_options_adapter_view_edittext1"
        android:layout_marginBottom="4dp"
        android:textSize="12sp"
        android:text="@string/click_to_edit"/>

    <EditText
        android:id="@+id/edit_collation_options_adapter_view_edittext1"
        android:background="@drawable/round_rectangle"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_above="@id/edit_collation_options_adapter_view_edittext2"
        android:layout_marginBottom="8dp"
        android:lines="3"
        android:inputType="textCapSentences"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:paddingStart="@dimen/edit_option_padding_start"
        android:paddingEnd="@dimen/edit_option_padding_start"
        android:fontFamily="@font/comicneue_bold"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:elevation="@dimen/large_elevation"
        android:hint="@string/option_here"
        tools:text="@string/blob_text"/>

    <EditText
        android:id="@+id/edit_collation_options_adapter_view_edittext2"
        android:background="@drawable/round_rectangle"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_above="@id/edit_collation_options_adapter_view_edittext3"
        android:layout_marginBottom="8dp"
        android:lines="3"
        android:inputType="textCapSentences"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:paddingStart="@dimen/edit_option_padding_start"
        android:paddingEnd="@dimen/edit_option_padding_start"
        android:fontFamily="@font/comicneue_bold"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:elevation="@dimen/large_elevation"
        android:hint="@string/option_here"
        tools:text="@string/blob_text"
        android:clipToPadding="false"/>

    <EditText
        android:id="@+id/edit_collation_options_adapter_view_edittext3"
        android:background="@drawable/round_rectangle"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_above="@id/edit_collation_options_adapter_view_edittext4"
        android:layout_marginBottom="8dp"
        android:lines="3"
        android:inputType="textCapSentences"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:paddingStart="@dimen/edit_option_padding_start"
        android:paddingEnd="@dimen/edit_option_padding_start"
        android:fontFamily="@font/comicneue_bold"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:elevation="@dimen/large_elevation"
        android:hint="@string/option_here"
        tools:text="@string/blob_text"
        android:clipToPadding="false"/>

    <EditText
        android:id="@+id/edit_collation_options_adapter_view_edittext4"
        android:background="@drawable/round_rectangle"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_above="@id/edit_collation_options_adapter_view_edittext5"
        android:layout_marginBottom="8dp"
        android:lines="3"
        android:inputType="textCapSentences"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:paddingStart="@dimen/edit_option_padding_start"
        android:paddingEnd="@dimen/edit_option_padding_start"
        android:fontFamily="@font/comicneue_bold"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:elevation="@dimen/large_elevation"
        android:hint="@string/option_here"
        tools:text="@string/blob_text"
        android:clipToPadding="false"/>

    <EditText
        android:id="@+id/edit_collation_options_adapter_view_edittext5"
        android:background="@drawable/round_rectangle"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_above="@id/fragment_edit_collation_submit_button"
        android:layout_marginBottom="8dp"
        android:lines="3"
        android:inputType="textCapSentences"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:paddingStart="@dimen/edit_option_padding_start"
        android:paddingEnd="@dimen/edit_option_padding_start"
        android:fontFamily="@font/comicneue_bold"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:elevation="@dimen/large_elevation"
        android:hint="@string/option_here"
        tools:text="@string/blob_text"
        android:clipToPadding="false"/>

    <Button
        android:id="@+id/fragment_edit_collation_submit_button"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/round_rectangle"
        android:backgroundTint="@color/selection_proceed_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:padding="20dp"
        android:text="@string/submit"
        android:textColor="@android:color/white"
        android:tint="@android:color/white"/>

</RelativeLayout>